<p id="notice"><%= notice %></p>
<%=render template: "pages/img_hero" %>
<div class="container margin-bottom " >
<h1>Explore Art Pieces</h1>

<% @welcomes.in_groups_of(3) do |group| %>
  <div class="row">
    <% group.compact.each do |welcome| %>
      <div class="col-md-4 ">
      	<div class="img-artpiece">
	      <div class="image"> 
	      	<%= image_tag welcome.picture_url, width: '100%' if welcome.picture.present? %>	
	      </div>

		      <div class="artpiece-content">
			       <h4><%= link_to welcome.name, welcome %></h4>
			       <%= welcome.description %>
		       </div>

	    </div>

      </div>
    <% end %>
  </div>
<% end %>

<br>
</div>

